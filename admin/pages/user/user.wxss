/* pages/user/user.wxss */
@import '../../lib/icon.wxss'; 
page{
  width: 100%;
  height: 100%;
}
.container{
  width: 100%;
  height: 100%;
  background-color:	WhiteSmoke;

}
.userInfo{
  width: 100%;
  height:350rpx;
  background-color:white;
  margin-bottom: 30rpx;
}
.userInfo .userImg{
  width: 100%;
  height: 200rpx;
  margin-top: 60rpx;
  text-align: center;
}
.userInfo .userImg image{
  display: inline-block;
  width: 180rpx;
  height: 180rpx;
  border-radius: 100rpx;  
}
.userInfo .name{
  text-align: center;
  font-size: 38rpx;
  font-weight: 600;
  align-items:center;
}

.userFunList{
  width: 100%;
  height: auto;
}
.userFunList{

}
.item{
  height: 90rpx;
  background-color:white;
  margin-bottom: 30rpx;
  font-size: 34rpx;
  line-height: 80rpx;
  color: #4B4B4B;
}
.browsingHistory{
  height: 90rpx;
  background-color:white;
  font-size: 34rpx;
  line-height: 80rpx;
  color: #4B4B4B;
  border-bottom:1px solid #DDDDDD; 
}
.item:active{
  background-color: #DDDDDD;
}
.browsingHistory:active{
  background-color: #DDDDDD;
}

.userFunList .iconfont{
  font-size: 40rpx;
  line-height: 90rpx;
  margin:0 25rpx;
}
.userFunList .right{
  font-size: 30rpx;
  line-height: 90rpx;
  float: right;
}

.noLogin{
  width: 100%;
  text-align: center;
  background-color: white;
  padding: 150rpx 0;
  margin-bottom: 30rpx;
}
.noLogin .loginBtn{
  display: inline-block;
  width: 180rpx;
  height: 56rpx;
  padding: 5rpx 5rpx 10rpx 10rpx;
  border-radius: 30rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 32rpx;
  border: 1px solid grey;
  background-color:	WhiteSmoke;
}